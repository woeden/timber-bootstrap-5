{% macro comment(comment) %}
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">{{ comment.comment_author }}</h5>
			<p class="card-text">{{ comment.content }}</p>
			{% for cmt in comment.children %}
				{{ _self.comment(cmt) }}
			{% endfor %}
			{% include 'templates/partial/comment-form.twig' %}
		</div>
	</div>
{% endmacro %}
